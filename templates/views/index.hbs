<!DOCTYPE html>
<html>
    <head>
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Weather App homepage</title>
        <link rel="stylesheet" href="styles/weatherstyle.css">
        <link rel="icon" href="../pics/earth.jpg">
        
       <style>
           section{
               display: flex;
               flex-direction: row;
           }
           td, tr{
               border:1px solid green;
           }
          .earth{
              width: 300px;
          }
          .leftpg,.rightpg{
              width:48%;
              height: 100%;
              padding: 1%;
          }
          #des{
              font-weight: bold;
              color:blue;
          }
          .rightpg li{
              list-style: none;
          }
          @media (max-width:700px){
              section{
                  flex-direction:column;
              }
          }
       </style>
    </head>
    <body>
        {{>header}}
        <section>
          <div class="leftpg">
            <img class="earth" src="../pics/earth.jpg" alt="earth pic">
            <form >
                <span><strong>Search Weather data</strong></span><br><br>
                <input placeholder="Type Location here">
                <button>Search</button>
            </form>
          </div>
          <div class="rightpg">
            <p id="err"></p>
           Data: <p id="res"></p>
           location: <p id="res1"></p>

          </div>
           
        </section>
        {{>footer}}
        <script src="../js/app.js"></script>
    </body>
</html>